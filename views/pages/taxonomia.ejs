<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <script src="/dist/js/d3.v3.min.js"></script>
    <link rel="stylesheet" href="/css/tree.css">
</head>

<body>
    <main>
        <% include ../partials/header %>
        <div class="row cover">
            <div class="col s3 m3 l2 offset-s10 offset-m10 offset-l10 center">
                <p>√Årvore</p>
                <div class="switch">
                    <label>
                        Off
                        <input id="swt_arvore" type="checkbox">
                        <span class="lever"></span>
                        On
                    </label>
                </div>
            </div>
            <div class="col s12 center" id="body" style="display: none"></div>
            <div class="col s12 m12 l9" id="taxonomy_tree"></div>
            <div class="col s12 m12 l3">
                <ul class="collection with-header" style="display: none">
                </ul>
            </div>
        </div>
        <script src="js/collapsable-tree.js"></script>
        <script src="/js/tree.js"></script>
    </main>
    <script>
        $("#swt_arvore").change(() => {
            if ($("#swt_arvore").prop("checked")) {
                $("#taxonomy_tree").hide()
                $("#body").show()
            } else {
                $("#taxonomy_tree").show()
                $("#body").hide()
            }
        });
    </script>
</body>
<% include ../partials/footer %>

</html>