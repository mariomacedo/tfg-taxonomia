<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <script src="/dist/js/d3.v3.min.js"></script>
    <link rel="stylesheet" href="/css/tree.css">
</head>

<body>
    <main>
        <% include ../partials/header %>
        <div class="row">
            <div class="col s1 m1 l1 offset-s11 offset-m11 offset-l11 center" style="position:fixed">
                <p>√Årvore</p>
                <div class="switch">
                    <label>
                        Off
                        <input id="swt_arvore" type="checkbox">
                        <span class="lever"></span>
                        On
                    </label>
                </div>
            </div>
            <div class="col s12 m12 l12" id="taxonomy_tree"></div>
        </div>
        <div class="row container">
            <div class="col s12" id="body" style="display: none">
            </div>
        </div>
        <script src="js/collapsable-tree.js"></script>
        <script src="/js/tree.js"></script>
    </main>
    <script>
        $("#swt_arvore").change(() => {
            if ($("#swt_arvore").prop("checked")) {
                $("#taxonomy_tree").hide()
                $("#body").show()
            } else {
                $("#taxonomy_tree").show()
                $("#body").hide()
            }
        });
    </script>
</body>

