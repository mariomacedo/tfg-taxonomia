<form id="form_new" action="/ferramenta/new" method="POST">
    <div class="row">
        <div class="col s12 m12 l12">
            <div class="row">
                <div class="col s10 m10 l10">
                    <h3>Nova Ferramenta</h3>
                </div>
                <div class="col s2 m2 l2">
                    <button class="btn-flat" type="reset" onclick="displayNovaFerramentaStepper('hide')">Cancelar</button>
                </div>
            </div>
            <ul class="stepper linear">
                <li class="step active">
                    <div class="step-title waves-effect">Informações Gerais</div>
                    <div class="step-content">
                        <div class="row">
                            <div class="col s12 m6 l6 input-field">
                                <input id="name" name="name" type="text" class="validate">
                                <label for="name">Nome da Ferramenta</label>
                            </div>
                        </div>
                        <div class="step-actions">
                            <button class="waves-effect waves-dark btn next-step">Avançar</button>
                        </div>
                    </div>
                </li>
                <% include ../partials/new_sustentacao %>
                <% include ../partials/new_dominio %>
                <% include ../partials/new_tecnologias %>
                <% include ../partials/new_funcionalidades %>
                <li class="step">
                    <div class="step-title waves-effect">Salvar</div>
                    <div class="step-content">
                        <div class="step-actions">
                            <button class="waves-effect waves-dark btn" type="submit">Salvar</button>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</form>